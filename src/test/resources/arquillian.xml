<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!--
Optional file. Allows us to use random ports when running tests.
The ports are communicated to the test via the @ArquillianResource annotation

  @RunWith(Arquillian.class)
  @RunAsClient
  public class ColorResourceTest {
      // ....

      private @ArquillianResource URL webappUrl;

      // ....
  }

If this file is deleted, the default Tomcat 8080 port is used.
-->
<arquillian>
  <container qualifier="tomee.embedded">
    <configuration>
      <property name="httpPort">-1</property>
      <property name="stopPort">-1</property>
      <property name="ajpPort">-1</property>
    </configuration>
  </container>
  <container qualifier="tomee.remote">
    <configuration>
      <property name="httpPort">-1</property>
      <property name="stopPort">-1</property>
      <property name="ajpPort">-1</property>
      <property name="version">7.0.2</property>
      <property name="classifier">webprofile</property>
      <!-- TIP use mvn tomee:build to create local TomEE installation -->
      <property name="dir">target/apache-tomee</property>
      <property name="appWorkingDir">target/apache-tomee-workdir</property>
    </configuration>
  </container>
</arquillian>
